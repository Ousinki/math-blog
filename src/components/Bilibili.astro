---
interface Props {
	bvid: string;
	page?: number;
}

const { bvid, page = 1 } = Astro.props;
---

<iframe
	src={`//player.bilibili.com/player.html?bvid=${bvid}&page=${page}`}
	scrolling="no"
	border="0"
	frameborder="no"
	framespacing="0"
	allowfullscreen="true"
	width="100%"
	height="400"
	class="rounded-lg shadow-md"
></iframe>
